<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@drawable/background_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".auth.welcomePage.WelcomePageFragment">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="300dp"
                android:layout_height="153dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_lets_get_started_welcome"
                android:fontFamily="@font/raleway_black"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/margin_24dp"
                android:layout_gravity="center"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_welcome"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="32dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="7dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/purple500"
                    android:background="@color/purple500">
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icone_artist"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tattoo_artist"
                            android:textColor="@color/white"
                            android:fontFamily="@font/raleway_black"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="7dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/purple500"
                    android:background="@null">
                    <LinearLayout
                        android:layout_width="143dp"
                        android:layout_height="140dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icone_user"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_client"
                            android:textColor="@color/white"
                            android:fontFamily="@font/raleway_black"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

</ScrollView>