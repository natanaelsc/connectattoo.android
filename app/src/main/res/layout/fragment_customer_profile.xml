<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customerprofile.CustomerProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:background="@drawable/bg_shape_customer_profile_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/btn_user_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginVertical="@dimen/margin_16dp"
            android:background="@drawable/circular_image_user_profile"
            android:contentDescription="@string/content_description_imagem_de_perfil_do_usuario"
            android:src="@drawable/icon_person_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_extrabold"
            android:text="JoÃ£o Silva"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18sp"
            app:layout_constraintStart_toEndOf="@+id/btn_user_image"
            app:layout_constraintTop_toTopOf="@+id/btn_user_image" />

        <TextView
            android:id="@+id/txtAgeAndEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/raleway_regular"
            android:maxLines="1"
            android:text="32 Anos | @joaosilva@gmail.com"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/txtNameUser"
            app:layout_constraintTop_toBottomOf="@+id/txtNameUser" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/deepPurple"
            android:src="@drawable/icon_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnEditProfile"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:fontFamily="@font/raleway_extrabold"
            android:padding="0dp"
            android:text="Editar Perfil"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14sp"
            app:layout_constraintStart_toStartOf="@+id/txtAgeAndEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtAgeAndEmail" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtMyInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/raleway_extrabold"
        android:text="@string/txt_meus_interesses"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnManageInterests"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/raleway_regular"
        android:foreground="?attr/selectableItemBackground"
        android:padding="0dp"
        android:soundEffectsEnabled="true"
        android:text="@string/btn_gerenciar"
        android:textColor="@color/black500"
        android:textSize="@dimen/txt_size_11sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtMyInterests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtMyInterests"
        tools:targetApi="m" />


</androidx.constraintlayout.widget.ConstraintLayout>