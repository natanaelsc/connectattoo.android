<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.loadingscreen.LoadingScreenFragment">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:importantForAccessibility="no"
        android:src="@drawable/logo_loading_01" />


    <TextView
        android:id="@+id/txt_this_may_take_a_few_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/raleway_extrabold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:text="@string/txt_this_may_take_a_few_seconds"
        android:textColor="@color/black900"
        android:textSize="@dimen/txt_size_16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.7" />


</LinearLayout>