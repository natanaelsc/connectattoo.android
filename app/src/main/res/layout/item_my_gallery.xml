<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMyGallery"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/ivMyGallery_1"
            app:layout_constraintEnd_toEndOf="@+id/ivMyGallery_1"
            app:layout_constraintStart_toEndOf="@+id/ivMyGallery_1"
            app:layout_constraintTop_toBottomOf="@+id/ivMyGallery_1">

            <ImageView
                android:id="@+id/ivMyGallery_1"
                android:layout_width="98dp"
                android:layout_height="91dp"
                android:importantForAccessibility="no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivMyGallery_2"
                android:layout_width="98dp"
                android:layout_height="91dp"
                android:layout_marginStart="8dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivMyGallery_1"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivMyGallery_3"
                android:layout_width="98dp"
                android:layout_height="90dp"
                android:layout_marginTop="1dp"
                android:importantForAccessibility="no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivMyGallery_1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivMyGallery_4"
                android:layout_width="98dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivMyGallery_3"
                app:layout_constraintTop_toBottomOf="@+id/ivMyGallery_2"
                tools:srcCompat="@tools:sample/avatars" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTitleGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:fontFamily="@font/raleway_extrabold"
        android:textColor="@color/deepPurple"
        tools:text="Animais Cartoon" />
</LinearLayout>